#!/usr/bin/env bash

#set -eoux pipefile

home="/home/agge"

# Must be ran with superuser privileges.
if [[ $EUID -ne 0 ]]; then
	echo "$(basename "$0"): Must be ran with superuser privileges"
	exit 1
fi

WG_IF=(
	"home"
	"mv-sj-dp"
	"mv-sj-xtom"
	"mv-sj-tzulo"
)

sudo nft -f /etc/nftables.conf.d/05-mullvad.rules

for if in "${WG_IF[@]}"; do
	wg-quick up "$if"
done
